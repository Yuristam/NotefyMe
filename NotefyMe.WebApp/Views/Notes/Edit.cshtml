@using NotefyMe.Domain.Enums
@model NotefyMe.WebApp.ViewModels.EditNoteViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Note</h4>

<hr />

<div class="row">
    <div class="col-md-4">

        <form method="post" asp-action="Edit">

            <input type="hidden" asp-for="DateCreated"/>

            <div class="form-group">
                <label asp-for="Title">Title</label>
                <input asp-for="Title" class="form-control" placeholder="Title">
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description">Description</label>
                <input asp-for="Description" class="form-control" placeholder="Description">
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NoteCategory">Note Category</label>
                <select asp-for="NoteCategory" asp-items="@Html.GetEnumSelectList<NoteCategory>()" class="form-control">
                    <option selected="selected" value="">--Select--</option>
                </select>
                <span asp-validation-for="NoteCategory" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NoteColor">Note Color</label>
                <select asp-for="NoteColor" asp-items="@Html.GetEnumSelectList<NoteColor>()" class="form-control">
                    <option selected="selected" value="">--Select--</option>
                </select>
                <span asp-validation-for="NoteColor" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>

        </form>

    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
